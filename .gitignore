# Ignore the default Rails log files
/log/*
!/log/.keep

# Ignore the default Rails temp files
/tmp/*
!/tmp/.keep

# Ignore the default Rails cache
/cache/*
!/cache/.keep

# Ignore the default Rails public files
/public/assets/*
/public/packs/*
/public/packs-test/*

# Ignore all but default files in vendor
/vendor/*
!/vendor/bundle

# Ignore the default Rails database files
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore by default system generated files
*.swp
*.swo
*.bak
*.log
*.pid
*.seed
*.sublime-workspace
*.sublime-project

# Ignore sensitive files
/config/credentials.yml.enc
/config/master.key
/.env
/.env.*

# Ignore the default Rails secret files
/config/secrets.yml
/config/database.yml

# Ignore node_modules
/node_modules/

# Ignore coverage and test result files
/coverage/
/test/tmp/
/test/reports/

# Ignore compiled files
*.rbc
*.sassc
*.scssc
*.scssc

# Ignore all files generated by Rails scaffolding
/public/system/*
