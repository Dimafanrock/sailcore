<div class="bg-white p-8 shadow-md rounded-lg w-96">
  <h2 class="text-2xl font-semibold text-center mb-6">Sign In</h2>

  <%= form_with url: user_session_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, name: "user[email]", required: true, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password, name: "user[password]", required: true, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.submit "Sign In", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
